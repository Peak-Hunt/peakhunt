<div class="container">
    <div class="home-header">
        <div class="header-bg">
            <div class="header-container blur-overlay">
                <div class="row">
                    <div class="col">
                        <h1>Discover mountains nearby</h1>
                        <form action="/routes">
                            <div class="form-container p-4 row no-gutter">
                                <div class="col-5 pe-2 m-0 p-0">
                                    <div id="geocoder" class="geocoder">
                                        <p class="location-label">Location</p>
                                        <input type="hidden" id="location" name="location" value="{{ form.location }}">
                                        <input type="hidden" id="locationAddress" name="locationAddress"
                                            value="{{ form.locationAddress }}">
                                    </div>
                                </div>
                                <div class="col-3 pe-2">
                                    <div class="form-floating">
                                        <select class="form-select" id="distanceFromLocation"
                                            name="distanceFromLocation">
                                            {{#each withinOptions as |withinOption|}}
                                            {{objOption ../form.distanceFromLocation withinOption}}
                                            {{/each}}
                                        </select>
                                        <label for="distanceFromLocation">Within</label>
                                    </div>
                                </div>
                                <div class="col-3 pe-2">
                                    <div class="form-floating">
                                        <select name="sport" class="form-select" id="floatingSelect">
                                            {{#each sportOptions as |sportOption|}}
                                            {{objOption ../sport sportOption}}
                                            {{/each}}
                                        </select>
                                        <label for="floatingSelect">Sport</label>
                                    </div>
                                </div>
                                <div class="col-1">
                                    <button class="btn bg-ph-primary" style="height: 58px;" type="submit"><i
                                            class="fas fa-search"></i></button>
                                </div>
                            </div>
                        </form>
                    </div>
                    <div class="col-4 d-flex justify-content-center">
                        <div class="hero-img"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <section id="sports">
        <div class="text-center">
            <h2>Search by Sport</h2>
        </div>
        <div class="row row-cols-10 mt-5"> {{!-- TODO --}}
            <div class="col">
                <div onclick="location.href='/routes?sport=hiking';" class="img category-img hover-shadow"
                    style="background-image: url('./images/hiking.jpg');"></div>
                <h5 class="text-center">Hiking</h5>
            </div>
            <div class="col">
                <div onclick="location.href='/routes?sport=mountaineering';" class="img category-img hover-shadow"
                    style="background-image: url('./images/mountaineering.jpg');"></div>
                <h5 class="text-center">Mountaineering</h5>
            </div>
            <div class="col">
                <div onclick="location.href='/routes?sport=ski';" class="img category-img hover-shadow"
                    style="background-image: url('./images/ski.jpg');"></div>
                <h5 class="text-center">Ski</h5>
            </div>
            <div class="col">
                <div onclick="location.href='/routes?sport=climbing';" class="img category-img hover-shadow"
                    style="background-image: url('./images/climbing.jpg');"></div>
                <h5 class="text-center">Climbing</h5>
            </div>
            <div class="col">
                <div onclick="location.href='/routes?sport=mtb';" class="img category-img hover-shadow"
                    style="background-image: url('./images/mtb.jpg');"></div>
                <h5 class="text-center">Mountain biking</h5>
            </div>
        </div>
    </section>

    <section id="trending">
        <div class="text-center mb-5">
            <h2>Trending locations</h2>
            <div class="row mt-5" style="height: 500px;">
                <div class="col-5">
                    <div onclick="location.href='/routes?location=6.86889%2C45.92222';" class="img location-img chamonix-img hover-shadow">
                        <h4>Chamonix, France</h4>
                    </div>
                </div>
                <div class="col d-flex flex-column justify-content-between" style="height: 500px;">
                    <div onclick="location.href='/routes?location=7.6%2C46.06667&distanceFromLocation=40';" class="img location-img valais-img hover-shadow" style="height: 240px;">
                        <h4>Valais, Switzerland</h4>
                    </div>
                    <div class="row" style="height: 240px;">
                        <div class="col">
                            <div onclick="location.href='/routes?location=11.833021%2C46.380222&distanceFromLocation=20';" class="img location-img dolomites-img hover-shadow"
                                style="height: 100%;">
                                <h4>Dolomites, Italy</h4>
                            </div>
                        </div>
                        <div class="col">
                            <div onclick="location.href='/routes?location=7.43861%2C46.95083&distanceFromLocation=30';" class="img location-img bern-img hover-shadow" style="height: 100%;">
                                <h4>Bern, Switzerland</h4>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>

<script type="module" src="/js/geocoder.js"></script>