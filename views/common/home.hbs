<div class="home-header">
    <div class="container">
        <div class="home-form-container">
            <h1>Explore mountain routes nearby</h1>
            <form action="#" class="mt-5">
                <div class="form-floating mb-3">
                    <input type="email" class="form-control" id="peak" placeholder="Matterhorn">
                    <label for="peak">Location</label>
                </div>
                <div class="form-floating mb-3">
                    <select class="form-select" id="floatingSelect" aria-label="Floating label select example">
                        <option selected>Hiking</option>
                        <option value="mountaineering">Mountaineering</option>
                        <option value="climbing">Climbing</option>
                        <option value="mtb">Mountain biking</option>
                    </select>
                    <label for="floatingSelect">Sports</label>
                </div>
                <div class="d-grid gap-2">
                  <button class="btn btn-dark p-2" type="submit">Search</button>
                </div>
            </form>
        </div>
    </div>
</div>

<section id="sports">
    <div class="container">
        <div class="text-center">
            <h2>Search by Sport</h2>
        </div>
        <div class="d-flex flex-row justify-content-between mb-5 mt-5">
            <div class="category-container d-flex flex-column align-items-center">
                <div onclick="location.href='#';" class="img category-img hiking-img"></div>
                <h5>Hiking</h5>
            </div>
            <div class="category-container d-flex flex-column align-items-center">
                <div onclick="location.href='#';"  class="img category-img mountaineering-img"></div>
                <h5>Mountaineering</h5>
            </div>
            <div class="category-container d-flex flex-column align-items-center">
                <div onclick="location.href='#';"  class="img category-img ski-img"></div>
                <h5>Ski</h5>
            </div>
            <div class="category-container d-flex flex-column align-items-center">
                <div onclick="location.href='#';"  class="img category-img climbing-img"></div>
                <h5>Climbing</h5>
            </div>
            <div class="category-container d-flex flex-column align-items-center">
                <div onclick="location.href='#';"  class="img category-img mtb-img"></div>
                <h5>Mountain biking</h5>
            </div>
        </div>
    </div>
</section>