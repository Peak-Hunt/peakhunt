<div class="container" style="margin-top: 150px; width: ">


    <form method="POST" action="/register">
        <div class="form-floating mb-3">
            <input type="text" class="form-control {{#if errors.email}}is-invalid{{/if}}" id="floatingInput"
                placeholder="name@example.com" name="email" value="{{user.email}}">
            <label for="floatingInput">Email address</label>
            <div class="invalid-feedback">{{errors.email}} </div>
        </div>
        <div class="form-floating">
            <input type="password" class="form-control {{#if errors.password}}is-invalid{{/if}}" id="floatingPassword"
                placeholder="Password" name="password">
            <label for="floatingPassword">Password</label>
            <div class="invalid-feedback">{{errors.password}} </div>
        </div>

        <button type="submit" class="btn btn-primary btn-block mt-1">Register</button>
        <hr>

    </form>

    <a class="btn btn-primary btn-block" href="/login">Login</a>

</div>