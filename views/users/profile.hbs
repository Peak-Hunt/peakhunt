<section>
  <div class="row">
    <div class="col-12 d-flex justify-content-between align-items-center">
      <h1>User Profile</h1>
    </div>
  </div>

  <hr class="mt-0" />

  <div class="row">
    <div class="col-12 col-lg-3">
      <div class="card">
        <img class="card-img-top" src="{{ user.avatar }}" alt="Card image cap">
        <div class="card-footer">
          <small class="text-muted">{{ user.name }}</small>
        </div>
      </div>
    </div>
    <div class="col-12 col-lg-9">
      <div class="card">
        <div class="card-body">
          <form action="/profile" method="post" enctype="multipart/form-data">
            <div class="input-group mb-1">
              <div class="input-group-prepend">
                <span class="input-group-text"><i class="fa fa-user" aria-hidden="true"></i></span>
              </div>
              <input type="text" class="form-control {{isInvalid errors.name }}" name="name" placeholder="Name"
                value="{{ user.name }}">
              {{formError errors.name }}
            </div>
            <div class="input-group mb-1">
              <div class="input-group-prepend">
                <span class="input-group-text"><i class="fa fa-envelope-o" aria-hidden="true"></i></span>
              </div>
              <input disabled type="text" class="form-control" name="email" value="{{ user.email }}">
            </div>

            <div class="input-group mb-1">
              <div class="input-group-prepend">
                <span class="input-group-text"><i class="fa fa-lock" aria-hidden="true"></i></span>
              </div>
              <input type="password" class="form-control {{isInvalid errors.password }}" name="password" placeholder="Password">
              {{formError errors.password }}
            </div>
            <div class="input-group mb-1">
              <div class="input-group-prepend">
                <span class="input-group-text"><i class="fa fa-lock" aria-hidden="true"></i></span>
              </div>
              <input type="password" class="form-control {{isInvalid errors.passwordMatch }}" name="passwordMatch" placeholder="Repeat Password">
              {{formError errors.passwordMatch }}
            </div>

           <div class="input-group mb-1">
              <div class="input-group-prepend">
                <span class="input-group-text"><i class="fa fa-lock" aria-hidden="true"></i></span>
              </div>
              <input type="text" class="form-control {{isInvalid errors.avatar }}" name="avatar" placeholder="avatar">
              {{formError errors.avatar }}
            </div>

            <button type="submit" class="btn btn-primary btn-block mt-1">Update info</button>
          </form>
        </div>
      </div>
    </div>
  </div>

</section>