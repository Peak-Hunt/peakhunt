<div class="container" style="margin-top: 100px;">
    <div class="user-banner img" style="background-image: url({{ user.banner }});">
        <div class="user-info">
            <div class="avatar" style="background-image: url({{ user.avatar }});"></div>
            <h4>Check the routes from {{ user.name }}!</h4>
        </div>
    </div>
    {{#unless routes}}
    <p class="comment" style="text-align: center;">This user didn't publish any routes yet.</p>
    {{/unless}}
    <div class="row row-cols-4">
        {{#each routes as |route|}}
        {{> routeList route=route}}
        {{/each}}
    </div>
    <div class="d-flex justify-content-center p-5">
        <nav>
            <ul class="pagination">
                <li class="page-item {{#unless pagination.previous}} disabled {{/unless}}">
                    <a href="/user/bayonasier?page={{ pagination.previous.page }}" class="page-link">Previous</a>
                </li>
                <li class="page-item {{#unless pagination.next}} disabled {{/unless}}">
                    <a href="/user/bayonasier?page={{ pagination.next.page }}" class="page-link">Next</a>
                </li>
            </ul>
        </nav>
    </div>
</div>