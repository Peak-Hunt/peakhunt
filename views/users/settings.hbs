<div class="container" style="margin-top: 100px;">
    <div class="user-banner img" style="background-image: url({{ user.banner }});">
        <div class="edit edit-banner" onclick="document.getElementById('upload-banner').click();"><i class="fas fa-pen"></i></div>
        </input>
        <div class="user-info">
            <div class="avatar" style="background-image: url({{ user.avatar }});">
                <div class="edit edit-avatar" onclick="document.getElementById('upload-avatar').click();"><i class="fas fa-pen"></i></div>
            </div>
            <h4>{{ user.name }}</h4>
        </div>
    </div>
    <div class="d-flex justify-content-center">
        <div class="settings-container">
            <form action="/settings" method="POST" enctype="multipart/form-data">
                <div class="form-floating mb-2">
                    <input type="text" class="form-control {{#if errors.name}}is-invalid{{/if}}" name="name"
                        value="{{ user.name }}" placeholder="peakhunter">
                    <label for="floatingInput">Username</label>
                    {{#if errors.name}}
                    <div class="invalid-feedback">{{ errors.name }}</div>
                    {{/if}}
                </div>
                <div class="form-floating mb-2">
                    <input disabled type="text" class="form-control" value="{{ user.email }}">
                    <label for="floatingInput">Email</label>
                </div>
                <div class="form-floating mb-2">
                    <input type="password" class="form-control {{#if errors.password}}is-invalid{{/if}}" name="password"
                        placeholder="Password">
                    <label for="floatingInput">Password</label>
                    {{#if errors.password}}
                    <div class="invalid-feedback">{{ errors.password }}</div>
                    {{/if}}
                </div>
                <div class="form-floating mb-2">
                    <input type="password" class="form-control {{#if errors.passwordMatch}}is-invalid{{/if}}"
                        name="passwordMatch" placeholder="Password">
                    <label for="floatingInput">Repeat password</label>
                    {{#if errors.passwordMatch}}
                    <div class="invalid-feedback">{{ errors.passwordMatch }}</div>
                    {{/if}}
                </div>
                <input type="file" name="banner" id="upload-banner" style="display: none;" />
                <input type="file" name="avatar" id="upload-avatar" style="display: none;" />
                <button type="submit" class="btn bg-ph-primary mt-3 p-3" style="width: 100%;">Update profile</button>
            </form>
        </div>
    </div>
</div>