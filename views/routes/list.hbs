<div class="d-flex justify-content-center">
    <div class="list-container container-fluid ps-5 pe-5 row row-cols-10" style="max-width: 1600px;">
        <div class="col-3">
            <div class="form-container p-4">
                <form class="mb-1 mt-3 text-center">
                    <div class="form-floating mb-2">
                        <input type="text" value="{{ location }}" name="location" class="form-control"
                            id="location"></input>
                        <label for="location">Location</label>
                    </div>
                    <div class="row">
                        <div class="col-6 pe-1">
                            <div class="form-floating mb-2 col">
                                <select name="sport" class="form-select" id="floatingSelect">
                                    {{#each sportOptions as |sportOption|}}
                                    {{objOption ../sport sportOption}}
                                    {{/each}}
                                </select>
                                <label for="floatingSelect">Sport</label>
                            </div>
                        </div>
                        <div class="col-6 ps-1">
                            <div class="form-floating mb-2">
                                <select name="difficulty" class="form-select" id="floatingSelect">
                                    {{#each difficultyOptions as |difficultyOption|}}
                                    {{option ../difficulty difficultyOption}}
                                    {{/each}}
                                </select>
                                <label for="floatingSelect">Difficulty</label>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-6 pe-1">
                            <div class="form-floating mb-2">
                                <input type="number" min="0" name="minElevation" class="form-control"
                                    id="minElevation"></input>
                                <label for="minElevation">Min elevation</label>
                            </div>
                        </div>
                        <div class="col-6 ps-1">
                            <div class="form-floating mb-2">
                                <input type="number" min="0" name="maxElevation" class="form-control"
                                    id="maxElevation"></input>
                                <label for="maxElevation">Max elevation</label>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-6 pe-1">
                            <div class="form-floating mb-2">
                                <input type="number" min="0" name="minDuration" class="form-control"
                                    id="minDuration"></input>
                                <label for="minDuration">Min duration</label>
                            </div>
                        </div>
                        <div class="col-6 ps-1">
                            <div class="form-floating mb-2">
                                <input type="number" min="0" name="maxDuration" class="form-control"
                                    id="maxDuration"></input>
                                <label for="maxDuration">Max duration</label>
                            </div>
                        </div>
                    </div>
                    <div class="form-floating">
                        <select class="form-select mb-2" id="floatingSelect" aria-label="Floating label select example">
                            <option value="top-rated">Rating: Top Rated</option>
                            <option value="longest">Duration: Longest</option>
                            <option value="shortest">Duration: Shortest</option>
                            <option value="shortest">Difficulty: Most Difficult</option>
                            <option value="shortest">Difficulty: Easiest</option>
                        </select>
                        <label for="floatingSelect">Order by</label>
                    </div>
                    <button type="submit" class="btn bg-ph-primary mb-2" style="height: 58px;"><i
                            class="fas fa-search me-3"></i>Search</button>
                    <a href=""><i class="fas fa-redo me-2"></i>Reset filters</a>
                </form>
            </div>
        </div>
        <div class="col">
            <div class="row row-cols-3">
                {{#each routes as |route|}}
                <div class="col mb-4">
                    <div class="route-card">
                        <div class="route-card-img mb-2 p-2 d-flex justify-content-end"
                            style="background-image: url({{ route.image }});">
                            {{#if route.ratingsAverage}}
                            <div class="route-card-rating">
                                <p><i class="fas fa-star me-1"></i>{{ route.ratingsAverage }}</p>
                            </div>
                            {{/if}}
                        </div>
                        <div class="p-2">
                            <div class="route-card-title">
                                <a href="/route/{{ route.id }}"><h5>{{ route.title }}</h5></a>
                            </div>
                            <div class="route-card-details mt-3">
                                <div class="row row-cols-3">
                                    <p class="me-4 col"><i class="fas fa-chevron-up me-2"></i>{{ route.elevationGained}}m</p>
                                    <p class="col"><i class="fas fa-chevron-down me-2"></i>{{ route.elevationLost }}m
                                    </p>
                                </div>
                                <div class="row row-cols-3">
                                    <p class="me-4 col"><i class="fas fa-hiking me-2"></i>{{ route.distance }} km</p>
                                    <p class="col"><i class="far fa-clock me-2"></i>{{ route.duration }} h</p>
                                </div>
                                <p><i class="fas fa-location-arrow me-2 mb-4"></i>{{ route.location }}</p>
                                <div class="d-flex">
                                    <span class="badge {{ route.sport }}-badge me-1">
                                        <img class="card-emoji me-2" src="./images/{{ route.sport }}-emoji.png"
                                            alt="{{ route.sport }} emoji">
                                        {{sportKeyToName route.sport }}
                                    </span>
                                    <span class="badge {{ route.difficulty }}-badge">{{ route.difficulty }}</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                {{/each}}
            </div>
        </div>
    </div>
</div>